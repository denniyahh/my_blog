{
  "name": "my_blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:jekyll": "bundle exec jekyll serve --host 0.0.0.0 --port 4000 --livereload --livereload-port 35730 --force_polling",
    "build": "vite build",
    "build:jekyll": "bundle exec jekyll build --config _config.yml,_config.ci.yml",
    "preview": "vite preview --host 0.0.0.0 --port 5173",
    "test": "pnpm run test:html && pnpm run test:markdown",
    "test:html": "bundle exec htmlproofer ./_site --assume-extension --check-html --disable-external --no-enforce-https",
    "test:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint": "eslint assets/js"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.3",
    "vite": "^7.2.4",
    "sass": "^1.94.2"
  }
}